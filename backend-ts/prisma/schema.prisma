generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Teacher {
  id         Int    @id @default(autoincrement())
  teacher_id String @unique
  name       String @default("teacher name")
  avatar     String @default("https://img.daisyui.com/images/profile/demo/yellingwoman@192.webp")

  class    String[]  @default(["x | y", "x | y"])
  students Student[]
}

model Student {
  id         Int    @id @default(autoincrement())
  avatar     String @default("https://img.daisyui.com/images/profile/demo/distracted1@192.webp")
  student_id String @unique
  teacher_id String

  Teacher Teacher @relation(fields: [teacher_id], references: [teacher_id])
  Score   Score[]

  name   String @default("student name")
  class  String @default("x")
  grade  String @default("y")
  gender String @default("female")
}

model Score {
  id         Int    @id @default(autoincrement())
  student_id String

  Student Student @relation(fields: [student_id], references: [student_id])

  score          Decimal @default(0.0)
  semesterSeason String  @default("Spring")
  semesterYear   Int     @default(2022)
  subject        String  @default("Math")
}
